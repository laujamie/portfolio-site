<header class="text-gray-700 body-font">
  <div class="container mx-auto flex flex-wrap py-5 flex-col md:flex-row items-center">
    <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href="/">
      <span class="text-xl">jamielau</span>
    </a>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <div class="flex gap-5 items-center">
        {% for headerItem in header.items %}
          <a class="hover:text-gray-900" href="{{ headerItem.href }}">{{ headerItem.label }}</a>
        {% endfor %}
      </div>
    </nav>
  </div>
</header>