---
title: Contact Me
layout: layouts/base.njk
---

{% set contactjs %}
{% include "scripts/contact.js" %}
{% endset %}

<section class="text-gray-700 body-font relative">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-12">
      <h1
        class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900"
      >
        Contact Me
      </h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">
        Let's get in touch!
      </p>
    </div>
    <form name="contact" x-data="contactForm()" @submit.prevent="submitForm">
      <div class="lg:w-1/2 md:w-2/3 mx-auto">
        <div class="flex flex-wrap -m-2">
          <div class="p-2 w-1/2">
            <input
              class="w-full bg-gray-100 rounded border border-gray-400 focus:outline-none focus:border-indigo-500 text-base px-4 py-2"
              placeholder="Name"
              type="text"
              name="name"
              required
              x-model="data.name"
/>
          </div>
          <div class="p-2 w-1/2">
            <input
              class="w-full bg-gray-100 rounded border border-gray-400 focus:outline-none focus:border-indigo-500 text-base px-4 py-2"
              placeholder="Email"
              type="email"
              name="replyTo"
              required
              x-model="data.replyTo"
/>
          </div>
          <div class="p-2 w-full">
            <textarea
              class="w-full bg-gray-100 rounded border border-gray-400 focus:outline-none h-48 focus:border-indigo-500 text-base px-4 py-2 resize-none block"
              placeholder="Message"
              name="message"
              required
              x-model="data.message"
            ></textarea>
          </div>
          <div class="p-2 w-full">
            <button
              class="flex mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg"
              type="submit"
              :disabled="loading"
            >
              Submit
            </button>
          </div>
          <div class="p-2 w-full">
            <div x-text="formMessage"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  {{ contactjs | jsmin | safe }}
</script>